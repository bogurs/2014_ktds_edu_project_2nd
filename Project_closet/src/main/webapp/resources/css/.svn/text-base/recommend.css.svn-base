@import url(http://fonts.googleapis.com/earlyaccess/nanumgothic.css);

body {
	overflow-y: scroll;
	margin: 0;
	font-family: 'Nanum Gothic', Dotum, "돋움", Gulim, "굴림", Verdana, Arial,
		"Trebuchet MS";
}

#headerContainer {
	position: fixed !important;
	z-index: 300;
	left: 0;
	right: 0;
	top: 0;
}

#headerWrapper {
	z-index: 20;
	height: 88px;
	min-width: 980px;
	color: white;
	font-weight: 800;
	background: #1cd8c9; /* Old browsers */
	background: -moz-linear-gradient(top, #1cd8c9 0%, #79e5d5 100%, #7db9e8 100%,
		#2989d8 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #1cd8c9),
		color-stop(100%, #79e5d5), color-stop(100%, #7db9e8),
		color-stop(100%, #2989d8));
	background: -webkit-linear-gradient(top, #1cd8c9 0%, #79e5d5 100%, #7db9e8 100%,
		#2989d8 100%);
	background: -o-linear-gradient(top, #1cd8c9 0%, #79e5d5 100%, #7db9e8 100%, #2989d8
		100%);
	background: -ms-linear-gradient(top, #1cd8c9 0%, #79e5d5 100%, #7db9e8 100%, #2989d8
		100%);
	background: linear-gradient(to bottom, #1cd8c9 0%, #79e5d5 100%, #7db9e8 100%,
		#2989d8 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1cd8c9',
		endColorstr='#2989d8', GradientType=0);
}

#headerWrapper>#main_header {
	margin: 0 auto;
	width: 980px;
	height: 90px;
}

#headerWrapper>#main_header>.main_logo_a {
	float: left;
	text-decoration: none;
}

#headerWrapper>#main_header>.main_logo_a>.main_logo {
	width: 170px;
	height: 36px;
	background-position: 0 -481px;
	color: white;
	font-size: 40px;
}

#main_header>#nav_login {
	float: right;
	margin: 0;
	padding: 0;
}

#main_header_nav {
	background: url(/closet/resources/img/gray.jpg);
	z-index: 20;
	margin: 0 auto;
	position: relative;
	zoom: 1;
	height: 40px;
	min-width: 980px;
}

#main_header_nav>#navigator {
	display: none; position : absolute;
	left: 0;
	position: absolute;
}

#main_header_nav>#submenubar {
	margin: 0 auto;
	width: 980px;
	height: 37px;
}

#main_header_nav>#submenubar table {
	margin: 0 auto;
	padding-top: 3px;
}

#main_header_nav>#submenubar table td {
	padding-left: 60px;
	padding-right: 60px;
}

#main_header_nav>#submenubar table td a {
	color: white;
	text-decoration: none;
	font-size: 20px;
	font-weight: 700;
}

#content {
	background: url(/closet/resources/img/main.jpg);
	margin: 0 auto;
	position: relative;
	zoom: 1;
	min-height: 825px;
}

#main_section {
	margin: 0 auto;
	max-width: 980px;
	margin-top: 128px;
}

#main_section #tabmenu {
	padding-top: 20px;
	padding-bottom: 0;
}

section.tabbuttons {
	overflow: hidden;
	margin-left: 60px;
}

section.tabbuttons > label {
	/* 수평 정렬 */
	display: block;
	float: left;
	/* 테두리 지정 */
	box-sizing: border-box;
	border: 2px solid #00e1c1;
	/* 색상 지정*/
	background: white;
	color: black;
	
	padding: 10px 50px;
	font-weight: 800;
	font-size: 20px;
}

#tabmenu input {
	display: none;
}

.tabbuttons label {
	cursor: pointer;
}
.tabbuttons label:FIRST-CHILD {
	border-radius: 10px 0 0 0;
}
.tabbuttons label:last-child {
	border-radius: 0 10px 0 0;
}

#tabmenu1:checked ~ section.tabbuttons label:nth-of-type(1) {
	background: #00e1c1;
	color: white;
}

#tabmenu2:checked ~ section.tabbuttons label:nth-of-type(2) {
	background: #00e1c1;
	color: white;
}

#main_section #tabcontent {
	width: 900px;
	height: 700px;
	background: white;
	border: 2px solid #00e1c1;
	overflow-y: scroll;
	margin: 0 auto;
	
	border-radius: 10px 10px 10px 10px;
}

/* 테이블 디자인 css */
#table_one{
background: #1cd8c9; /* Old browsers */
background: -moz-linear-gradient(top,  #1cd8c9 0%, #79e5d5 100%, #7db9e8 100%, #2989d8 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1cd8c9), color-stop(100%,#79e5d5), color-stop(100%,#7db9e8), color-stop(100%,#2989d8)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #1cd8c9 0%,#79e5d5 100%,#7db9e8 100%,#2989d8 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #1cd8c9 0%,#79e5d5 100%,#7db9e8 100%,#2989d8 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #1cd8c9 0%,#79e5d5 100%,#7db9e8 100%,#2989d8 100%); /* IE10+ */
background: linear-gradient(to bottom,  #1cd8c9 0%,#79e5d5 100%,#7db9e8 100%,#2989d8 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1cd8c9', endColorstr='#2989d8',GradientType=0 ); /* IE6-9 */
}

/* content폼 디자인 css */
.btn {  
    width: 2em; 
    height: 280px; 
    border: 0; 
    background: #f5f6fa; 
    display: none; 
    margin-top: 60px; 
 } 

#slider {
   position: relative;
   margin: 0 auto;
   padding: 0;
   list-style: none;
   width: 480px;
   height: 600px;
   overflow-x: hidden
}

#slider li {
   display: none;
   position: absolute;
   left: 0;
   top: 0
}

#slider img {
   width: 480px;
   height: 500px
}

#input2 {
	position: absolute;
	left: 0px;
	top: 0px;
	display: none;
}
.layer {display:none; position:fixed; _position:absolute; top:0; left:0; width:100%; height:100%; z-index:100;}
.layer .bg {position:absolute; top:0; left:0; width:100%; height:100%; background:#000; opacity:.5; filter:alpha(opacity=50);}
.layer .pop-layer {display:block;}
.pop-layer {display:none; position: absolute; top: 50%; left: 50%; width: 1200px; height:600px;  background-image:url('resources/img/main.jpg'); border: 5px solid #1DE9C0; z-index: 10;} 
.pop-layer .pop-container {padding: 20px 25px;}
.pop-layer p.ctxt {color: #666; line-height: 25px;}
.pop-layer .btn-r {width:100px; height:100px; left:500px; top:300px}
.cbtn {position: absolute; right: 5px; top: 5px; padding: 5px; display: inline-block; cursor: pointer;}   
.cbtn:hover {border: 1px solid #091940; background-color:red; color:#fff;}